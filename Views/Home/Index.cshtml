@model IEnumerable<Job>
@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <div class="hero-content">
                    <h1 class="hero-title">Tìm việc làm, tuyển dụng hiệu quả</h1>
                    <p class="hero-subtitle">Tuyển dụng Dynamic - Nền tảng tuyển dụng hàng đầu Việt Nam</p>
                    <div class="hero-cta">
                        <a asp-controller="Jobs" asp-action="Index" class="btn-hero btn-hero-primary">
                    <i class="bi bi-search me-2"></i>Tìm việc ngay
                </a>
                        <a asp-controller="Account" asp-action="Register" class="btn-hero btn-hero-secondary">
                            <i class="bi bi-person-plus me-2"></i>Đăng ký miễn phí
                        </a>
                    </div>
            </div>
            </div>
        </div>
    </div>
</section>

<!-- Search Section -->
<section class="search-section">
    <div class="container">
        <div class="search-form">
            <form asp-controller="Jobs" asp-action="Index" method="get">
                <div class="search-input-group">
                    <i class="bi bi-search search-icon"></i>
                    <input type="text" class="search-input" name="search" placeholder="Từ khóa, công ty, vị trí...">
                </div>
                <div class="search-filters">
                    <select class="filter-select" name="category">
                    <option value="">Tất cả ngành nghề</option>
                        <option value="Công nghệ thông tin">Công nghệ thông tin</option>
                        <option value="Kinh doanh">Kinh doanh</option>
                        <option value="Marketing">Marketing</option>
                        <option value="Thiết kế">Thiết kế</option>
                        <option value="Nhân sự">Nhân sự</option>
                        <option value="Kế toán">Kế toán</option>
                        <option value="Tài chính">Tài chính</option>
                    </select>
                    <select class="filter-select" name="location">
                        <option value="">Tất cả địa điểm</option>
                        <option value="Hà Nội">Hà Nội</option>
                        <option value="TP. Hồ Chí Minh">TP. Hồ Chí Minh</option>
                        <option value="Đà Nẵng">Đà Nẵng</option>
                        <option value="Hải Phòng">Hải Phòng</option>
                        <option value="Cần Thơ">Cần Thơ</option>
                    </select>
                    <select class="filter-select" name="jobType">
                        <option value="">Tất cả loại hình</option>
                        <option value="Toàn thời gian">Toàn thời gian</option>
                        <option value="Bán thời gian">Bán thời gian</option>
                        <option value="Hợp đồng">Hợp đồng</option>
                        <option value="Thực tập">Thực tập</option>
                </select>
                    <button type="submit" class="btn-hero btn-hero-primary w-100">
                        <i class="bi bi-search me-2"></i>Tìm kiếm
                    </button>
            </div>
        </form>
            </div>
    </div>
</section>

<!-- Stats Section -->
<section class="stats-section">
    <div class="container">
        <div class="row">
            <div class="col-md-3 mb-4">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="bi bi-briefcase-fill"></i>
                    </div>
                    <div class="stat-number">@ViewBag.TotalJobs</div>
                    <div class="stat-label">Việc làm đang tuyển</div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="bi bi-building"></i>
                    </div>
                    <div class="stat-number">500+</div>
                    <div class="stat-label">Công ty uy tín</div>
                    </div>
                </div>
            <div class="col-md-3 mb-4">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="bi bi-people-fill"></i>
            </div>
                    <div class="stat-number">@ViewBag.TotalCandidates</div>
                    <div class="stat-label">Ứng viên đã đăng ký</div>
                    </div>
                </div>
            <div class="col-md-3 mb-4">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="bi bi-file-earmark-text"></i>
            </div>
                    <div class="stat-number">@ViewBag.TotalApplications</div>
                    <div class="stat-label">Đơn ứng tuyển</div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Jobs Section -->
<section class="featured-jobs">
    <div class="container">
        <div class="section-title">
            <h2>Việc làm nổi bật</h2>
            <p>Khám phá các cơ hội việc làm mới nhất từ các công ty hàng đầu</p>
        </div>
        <div class="row">
            @foreach (var job in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="job-card slide-up">
                        <div class="job-header">
                            <div>
                                <a asp-controller="Jobs" asp-action="Details" asp-route-id="@job.MaCongViec" class="job-title">
                                    @job.TieuDe
                                </a>
                                <div class="job-company">
                                    <i class="bi bi-building me-1"></i>@job.CongTy
                                </div>
                                <div class="job-location">
                                    <i class="bi bi-geo-alt me-1"></i>@job.DiaDiem
                                </div>
                            </div>
                                <span class="badge bg-primary">@job.LoaiCongViec</span>
                            </div>
                        
                            @if (job.LuongToiThieu.HasValue && job.LuongToiDa.HasValue)
                            {
                            <div class="job-salary">
                                    <i class="bi bi-cash me-1"></i>@job.LuongToiThieu.Value.ToString("N0") - @job.LuongToiDa.Value.ToString("N0") VNĐ
                            </div>
                        }
                        
                        <div class="job-description">
                            @(job.MoTa.Length > 120 ? job.MoTa.Substring(0, 120) + "..." : job.MoTa)
                        </div>
                        
                        <div class="job-footer">
                            <div class="job-date">
                                    <i class="bi bi-clock me-1"></i>@job.NgayDang.ToString("dd/MM/yyyy")
                            </div>
                            <a asp-controller="Jobs" asp-action="Details" asp-route-id="@job.MaCongViec" class="job-apply">
                                Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-4">
            <a asp-controller="Jobs" asp-action="Index" class="btn-hero btn-hero-primary">
                Xem tất cả việc làm <i class="bi bi-arrow-right ms-2"></i>
            </a>
        </div>
    </div>
</section>

<!-- How it works Section -->
<section class="how-it-works">
    <div class="container">
        <div class="section-title">
            <h2>Cách thức hoạt động</h2>
            <p>Quy trình tuyển dụng đơn giản và hiệu quả</p>
        </div>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="step-card">
                    <div class="step-icon">
                        <i class="bi bi-search"></i>
                    </div>
                    <h4 class="step-title">1. Tìm kiếm việc làm</h4>
                    <p class="step-description">Tìm kiếm công việc phù hợp với kỹ năng và mong muốn của bạn từ hàng ngàn tin tuyển dụng</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="step-card">
                    <div class="step-icon">
                        <i class="bi bi-file-earmark-text"></i>
                    </div>
                    <h4 class="step-title">2. Nộp hồ sơ</h4>
                    <p class="step-description">Gửi CV và thư xin việc trực tuyến chỉ trong vài phút với công cụ tạo CV thông minh</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="step-card">
                    <div class="step-icon">
                        <i class="bi bi-check-circle"></i>
                    </div>
                    <h4 class="step-title">3. Nhận việc</h4>
                    <p class="step-description">Chờ phản hồi từ nhà tuyển dụng và bắt đầu công việc mơ ước của bạn</p>
                </div>
            </div>
        </div>
    </div>
</section>


