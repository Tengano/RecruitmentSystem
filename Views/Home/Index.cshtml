@model IEnumerable<Job>
@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Hero Section -->
<section class="hero-section bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <h1 class="display-4 fw-bold mb-3">Tìm công việc mơ ước của bạn</h1>
                <p class="lead mb-4">Khám phá hàng ngàn cơ hội việc làm từ các công ty hàng đầu Việt Nam</p>
                <a asp-controller="Jobs" asp-action="Index" class="btn btn-light btn-lg px-4">
                    <i class="bi bi-search me-2"></i>Tìm việc ngay
                </a>
            </div>
            <div class="col-lg-6">
                <img src="https://illustrations.popsy.co/amber/remote-work.svg" alt="Hero" class="img-fluid" />
            </div>
        </div>
    </div>
</section>

<!-- Search Section -->
<section class="search-section py-4 bg-light">
    <div class="container">
        <form asp-controller="Jobs" asp-action="Index" method="get" class="row g-3">
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control" name="search" placeholder="Từ khóa, công ty...">
                </div>
            </div>
            <div class="col-md-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                    <input type="text" class="form-control" name="location" placeholder="Địa điểm">
                </div>
            </div>
            <div class="col-md-3">
                <select class="form-select" name="category">
                    <option value="">Tất cả ngành nghề</option>
                    <option>Công nghệ thông tin</option>
                    <option>Kinh doanh</option>
                    <option>Marketing</option>
                    <option>Thiết kế</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Tìm kiếm</button>
            </div>
        </form>
    </div>
</section>

<!-- Stats Section -->
<section class="stats-section py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 mb-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <i class="bi bi-briefcase-fill text-primary" style="font-size: 3rem;"></i>
                        <h3 class="mt-3 fw-bold">@ViewBag.TotalJobs</h3>
                        <p class="text-muted">Việc làm đang tuyển</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <i class="bi bi-building text-success" style="font-size: 3rem;"></i>
                        <h3 class="mt-3 fw-bold">500+</h3>
                        <p class="text-muted">Công ty uy tín</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <i class="bi bi-people-fill text-info" style="font-size: 3rem;"></i>
                        <h3 class="mt-3 fw-bold">@ViewBag.TotalCandidates</h3>
                        <p class="text-muted">Ứng viên đã đăng ký</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Jobs Section -->
<section class="featured-jobs py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Việc làm nổi bật</h2>
            <p class="text-muted">Khám phá các cơ hội việc làm mới nhất</p>
        </div>
        <div class="row">
            @foreach (var job in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm border-0 hover-shadow">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title fw-bold mb-0">@job.Title</h5>
                                <span class="badge bg-primary">@job.JobType</span>
                            </div>
                            <p class="text-muted mb-2">
                                <i class="bi bi-building me-1"></i>@job.Company
                            </p>
                            <p class="text-muted mb-2">
                                <i class="bi bi-geo-alt me-1"></i>@job.Location
                            </p>
                            @if (job.SalaryMin.HasValue && job.SalaryMax.HasValue)
                            {
                                <p class="text-success fw-semibold mb-3">
                                    <i class="bi bi-cash me-1"></i>@job.SalaryMin.Value.ToString("N0") - @job.SalaryMax.Value.ToString("N0") VNĐ
                                </p>
                            }
                            <p class="card-text text-muted small">@job.Description.Substring(0, Math.Min(100, job.Description.Length))...</p>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <small class="text-muted">
                                    <i class="bi bi-clock me-1"></i>@job.PostedDate.ToString("dd/MM/yyyy")
                                </small>
                                <a asp-controller="Jobs" asp-action="Details" asp-route-id="@job.JobId" class="btn btn-sm btn-outline-primary">
                                    Chi tiết <i class="bi bi-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-4">
            <a asp-controller="Jobs" asp-action="Index" class="btn btn-primary btn-lg">
                Xem tất cả việc làm <i class="bi bi-arrow-right ms-2"></i>
            </a>
        </div>
    </div>
</section>

<!-- How it works Section -->
<section class="how-it-works py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Cách thức hoạt động</h2>
            <p class="text-muted">Quy trình tuyển dụng đơn giản và hiệu quả</p>
        </div>
        <div class="row">
            <div class="col-md-4 text-center mb-4">
                <div class="mb-3">
                    <i class="bi bi-search text-primary" style="font-size: 4rem;"></i>
                </div>
                <h4 class="fw-bold">1. Tìm kiếm việc làm</h4>
                <p class="text-muted">Tìm kiếm công việc phù hợp với kỹ năng và mong muốn của bạn</p>
            </div>
            <div class="col-md-4 text-center mb-4">
                <div class="mb-3">
                    <i class="bi bi-file-earmark-text text-primary" style="font-size: 4rem;"></i>
                </div>
                <h4 class="fw-bold">2. Nộp hồ sơ</h4>
                <p class="text-muted">Gửi CV và thư xin việc trực tuyến chỉ trong vài phút</p>
            </div>
            <div class="col-md-4 text-center mb-4">
                <div class="mb-3">
                    <i class="bi bi-check-circle text-primary" style="font-size: 4rem;"></i>
                </div>
                <h4 class="fw-bold">3. Nhận việc</h4>
                <p class="text-muted">Chờ phản hồi và bắt đầu công việc mơ ước của bạn</p>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <style>
        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        .hover-shadow {
            transition: all 0.3s ease;
        }
        
        .hover-shadow:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important;
        }
    </style>
}

