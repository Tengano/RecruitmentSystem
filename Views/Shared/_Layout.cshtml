<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hệ thống Quản lý Tuyển dụng</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/modern-auth.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/modern-footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="@ViewData["BodyClass"]">
    <header>
        <nav class="navbar navbar-expand-lg topcv-header">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-briefcase-fill me-2"></i>Dynamic
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="#" id="jobsDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-briefcase me-1"></i>Việc làm
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Jobs" asp-action="Index">
                                    <i class="bi bi-search me-2"></i>Tìm việc làm
                                </a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">Về chúng tôi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact">Liên hệ</a>
                        </li>
                        
                        
                        @{
                            var userId = Context.Session.GetInt32("UserId");
                            var userRole = Context.Session.GetString("UserRole");
                        }
                        @if (userId != null && userRole == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Index">
                                    <i class="bi bi-speedometer2"></i> Dashboard
                                </a>
                            </li>
                        }
                        @await Html.PartialAsync("_LoginPartial")
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="container mt-3">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="container mt-3">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }
        @RenderBody()
    </main>

    <!-- Modern Footer -->
    <footer class="modern-footer">
        <div class="footer-background"></div>
        <div class="container">
            <div class="footer-content">
                <div class="row">
                    <div class="col-lg-4 mb-4">
                        <div class="footer-brand">
                            <h4 class="brand-title">
                                <i class="bi bi-briefcase-fill"></i>
                                Tuyển Dụng Dynamic
                            </h4>
                            <p class="brand-description">
                                Nền tảng tuyển dụng hàng đầu Việt Nam, kết nối nhà tuyển dụng và ứng viên một cách hiệu quả nhất.
                            </p>
                            <div class="social-media">
                                <a href="https://facebook.com/genshin.no" target="_blank" class="social-btn facebook">
                                    <i class="bi bi-facebook"></i>
                                </a>
                                <a href="https://github.com/Tengano" target="_blank" class="social-btn github">
                                    <i class="bi bi-github"></i>
                                </a>
                                <a href="mailto:xuankhoi288@outlook.com" class="social-btn email">
                                    <i class="bi bi-envelope"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-6 mb-4">
                        <div class="footer-links">
                            <h5 class="link-title">Việc làm</h5>
                            <ul class="link-list">
                                <li><a asp-controller="Jobs" asp-action="Index">Tìm việc làm</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-6 mb-4">
                        <div class="footer-links">
                            <h5 class="link-title">Hỗ trợ</h5>
                            <ul class="link-list">
                                <li><a asp-controller="Home" asp-action="About">Về chúng tôi</a></li>
                                <li><a asp-controller="Home" asp-action="Contact">Liên hệ</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-4 mb-4">
                        <div class="footer-contact">
                            <h5 class="contact-title">Liên hệ</h5>
                            <div class="contact-info">
                                <div class="contact-item">
                                    <i class="bi bi-geo-alt-fill"></i>
                                    <span>36 Hồ Tùng Mậu, Phường Trường Vinh, Việt Nam</span>
                                </div>
                                <div class="contact-item">
                                    <i class="bi bi-envelope-fill"></i>
                                    <span>xuankhoi288@outlook.com</span>
                                </div>
                                <div class="contact-item">
                                    <i class="bi bi-phone-fill"></i>
                                    <span>(0234) 567 890</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <p class="copyright">
                            &copy; 2024-2025 <strong>Tuyển Dụng Dynamic</strong>. All rights reserved.
                        </p>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <p class="designer">
                            Designed with <i class="bi bi-heart-fill text-danger"></i> by Nguyễn Xuân Khởi
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>