<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hệ thống Quản lý Tuyển dụng</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/animations.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg topcv-header">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-briefcase-fill me-2"></i>Dynamic
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="#" id="jobsDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-briefcase me-1"></i>Việc làm
                            </a>
                            <ul class="dropdown-menu mega-menu">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h6 class="dropdown-header">
                                                <i class="bi bi-search me-2"></i>Tìm kiếm việc làm
                                            </h6>
                                            <li><a class="dropdown-item" asp-controller="Jobs" asp-action="Index">
                                                <i class="bi bi-search me-2"></i>Tìm việc làm
                                            </a></li>
                                            <li><a class="dropdown-item" href="#">
                                                <i class="bi bi-laptop me-2"></i>Việc làm IT
                                            </a></li>
                                            <li><a class="dropdown-item" href="#">
                                                <i class="bi bi-graph-up-arrow me-2"></i>Việc làm Marketing
                                            </a></li>
                                            <li><a class="dropdown-item" href="#">
                                                <i class="bi bi-calculator me-2"></i>Việc làm Kế toán
                                            </a></li>
                                            <li><a class="dropdown-item" href="#">
                                                <i class="bi bi-people me-2"></i>Việc làm Nhân sự
                                            </a></li>
                                            <li><a class="dropdown-item" href="#">
                                                <i class="bi bi-cart me-2"></i>Việc làm Bán hàng
                                            </a></li>
                                        </div>
                                        <div class="col-md-6">
                                            <h6 class="dropdown-header">
                                                <i class="bi bi-building me-2"></i>Công ty & Tuyển dụng
                                            </h6>
                                            <li><a class="dropdown-item" href="#">
                                                <i class="bi bi-list-ul me-2"></i>Danh sách công ty
                                            </a></li>
                                            <li><a class="dropdown-item" href="#">
                                                <i class="bi bi-trophy me-2"></i>Top công ty
                                            </a></li>
                                            <li><a class="dropdown-item" href="#">
                                                <i class="bi bi-plus-circle me-2"></i>Đăng tuyển dụng
                                            </a></li>
                                            <li><a class="dropdown-item" href="#">
                                                <i class="bi bi-file-person me-2"></i>Tìm hồ sơ
                                            </a></li>
                                        </div>
                                    </div>
                                </div>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">Về chúng tôi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact">Liên hệ</a>
                        </li>
                        
                        
                        @{
                            var userId = Context.Session.GetInt32("UserId");
                            var userRole = Context.Session.GetString("UserRole");
                        }
                        @if (userId != null && userRole == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Index">
                                    <i class="bi bi-speedometer2"></i> Dashboard
                                </a>
                            </li>
                        }
                        @await Html.PartialAsync("_LoginPartial")
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="container mt-3">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="container mt-3">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }
        @RenderBody()
    </main>

    <footer class="topcv-footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h5><i class="bi bi-briefcase-fill me-2"></i>Tuyển Dụng Dynamic</h5>
                    <p>Nền tảng tuyển dụng hàng đầu Việt Nam, kết nối nhà tuyển dụng và ứng viên một cách hiệu quả. Tiếp lợi thế, nối thành công!</p>
                    <div class="mt-3">
                        <a href="#" class="text-decoration-none me-3"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-decoration-none me-3"><i class="bi bi-linkedin"></i></a>
                        <a href="#" class="text-decoration-none me-3"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="text-decoration-none"><i class="bi bi-youtube"></i></a>
                    </div>
                </div>
                <div class="footer-section">
                    <h5>Việc làm</h5>
                    <ul>
                        <li><a asp-controller="Jobs" asp-action="Index">Tìm việc làm</a></li>
                        <li><a href="#">Việc làm IT</a></li>
                        <li><a href="#">Việc làm Marketing</a></li>
                        <li><a href="#">Việc làm Kế toán</a></li>
                        <li><a href="#">Việc làm Nhân sự</a></li>
                        <li><a href="#">Việc làm Bán hàng</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h5>Công ty</h5>
                    <ul>
                        <li><a href="#">Danh sách công ty</a></li>
                        <li><a href="#">Top công ty</a></li>
                        <li><a href="#">Đăng tuyển dụng</a></li>
                        <li><a href="#">Tìm hồ sơ</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h5>Hỗ trợ</h5>
                    <ul>
                        <li><a asp-controller="Home" asp-action="About">Về chúng tôi</a></li>
                        <li><a asp-controller="Home" asp-action="Contact">Liên hệ</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h5>Liên hệ</h5>
                    <p>
                        <i class="bi bi-geo-alt-fill me-2"></i>36 Hồ Tùng Mậu, Phường Trường Vinh, Việt Nam<br />
                        <i class="bi bi-envelope-fill me-2"></i>xuankhoi288@outlook.com<br />
                        <i class="bi bi-phone-fill me-2"></i>(0234) 567 890
                    </p>
                    <div class="mt-3">
                        <small class="text-muted">Giờ hành chính: 7:00 - 18:00 (T2-T6)</small>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2024-2025 Tuyển Dụng Dynamic. All rights reserved. | Designed by Nguyễn Xuân Khởi</p>
            </div>
        </div>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/animations.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>