@model RecruitmentSystem.Models.User

@{
    ViewData["Title"] = "Đăng ký";
    ViewData["BodyClass"] = "register-page";
}

<div class="auth-container">
    <div class="container-fluid">
        <div class="row min-vh-100">
            <div class="col-lg-6 auth-left">
                <div class="auth-form-wrapper">
                    <div class="auth-header">
                        <div class="brand-logo">
                            <i class="bi bi-briefcase-fill"></i>
                            <span>Dynamic</span>
                        </div>
                    </div>
                    
                    <div class="auth-content">
                        <h1 class="auth-title">Tạo tài khoản mới</h1>
                        <p class="auth-subtitle">Đăng ký ngay để bắt đầu hành trình tìm việc của bạn.</p>
                        
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger auth-alert">@TempData["ErrorMessage"]</div>
                        }
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success auth-alert">@TempData["SuccessMessage"]</div>
                        }

                        <form asp-action="Register" method="post" class="auth-form">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label asp-for="HoTen" class="form-label">Họ và tên</label>
                                    <input asp-for="HoTen" class="form-control auth-input" placeholder="Nhập họ và tên" />
                                    <span asp-validation-for="HoTen" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="Email" class="form-label">Email</label>
                                    <input asp-for="Email" class="form-control auth-input" placeholder="Nhập địa chỉ email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="TenDangNhap" class="form-label">Tên đăng nhập</label>
                                <input asp-for="TenDangNhap" class="form-control auth-input" placeholder="Nhập tên đăng nhập" />
                                <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="MatKhau" class="form-label">Mật khẩu</label>
                                <input asp-for="MatKhau" type="password" class="form-control auth-input" placeholder="Nhập mật khẩu" />
                                <span asp-validation-for="MatKhau" class="text-danger"></span>
                            </div>
                            
                            <div class="form-options">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="agreeTerms" required>
                                    <label class="form-check-label" for="agreeTerms">
                                        Tôi đồng ý với <a asp-controller="Home" asp-action="TermsOfService" class="terms-link" target="_blank">Điều khoản sử dụng</a> và <a asp-controller="Home" asp-action="PrivacyPolicy" class="terms-link" target="_blank">Chính sách bảo mật</a>
                                    </label>
                                </div>
                            </div>
                            
                            <div class="auth-buttons">
                                <button type="submit" class="btn btn-primary auth-btn-primary auth-submit-btn">
                                    <span class="btn-text">Đăng ký</span>
                                    <span class="btn-spinner d-none">
                                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                        Đang xử lý...
                                    </span>
                                </button>
                                <a asp-action="Login" class="btn btn-outline-primary auth-btn-secondary">Đăng nhập</a>
                            </div>
                            
                            <div class="auth-divider">
                                <span>Hoặc đăng ký bằng</span>
                            </div>
                            
                            <div class="social-login">
                                <a href="#" class="social-btn facebook" title="Facebook">
                                    <i class="bi bi-facebook"></i>
                                </a>
                                <a href="#" class="social-btn google" title="Google">
                                    <i class="bi bi-google"></i>
                                </a>
                                <a href="#" class="social-btn instagram" title="Instagram">
                                    <i class="bi bi-instagram"></i>
                                </a>
                            </div>
                        </form>
                        
                        <div class="auth-footer-links">
                            <a asp-controller="Home" asp-action="TermsOfService" class="auth-footer-link" target="_blank">Điều khoản sử dụng</a>
                            <span class="auth-footer-separator">•</span>
                            <a asp-controller="Home" asp-action="PrivacyPolicy" class="auth-footer-link" target="_blank">Chính sách bảo mật</a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-6 auth-right">
                <div class="auth-illustration">
                    <div class="illustration-content">
                        <h2>Bắt đầu hành trình sự nghiệp</h2>
                        <p>Tham gia cùng hàng nghìn ứng viên và nhà tuyển dụng đang tìm kiếm cơ hội phát triển nghề nghiệp.</p>
                        
                        <div class="illustration-features">
                            <div class="feature-item">
                                <div class="feature-icon">
                                    <i class="bi bi-search"></i>
                                </div>
                                <div class="feature-text">
                                    <h4>Tìm việc thông minh</h4>
                                    <p>Đội ngũ chuyên nghiệp giúp tìm kiếm việc làm phù hợp nhất</p>
                                </div>
                            </div>
                            
                            <div class="feature-item">
                                <div class="feature-icon">
                                    <i class="bi bi-people"></i>
                                </div>
                                <div class="feature-text">
                                    <h4>Kết nối trực tiếp</h4>
                                    <p>Gặp gỡ nhà tuyển dụng hàng đầu Việt Nam</p>
                                </div>
                            </div>
                            
                            <div class="feature-item">
                                <div class="feature-icon">
                                    <i class="bi bi-graph-up"></i>
                                </div>
                                <div class="feature-text">
                                    <h4>Phát triển sự nghiệp</h4>
                                    <p>Học hỏi và phát triển kỹ năng liên tục</p>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .terms-link {
            color: #0d6efd;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        
        .terms-link:hover {
            color: #0a58ca;
            text-decoration: underline;
        }
        
        .form-check-label {
            font-size: 0.95rem;
            color: #666;
        }
        
        .form-check-input:required {
            border-color: #dc3545;
        }
        
        .form-check-input:checked {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }
    </style>

    <script>
        // Validation cho checkbox điều khoản
        document.querySelector('.auth-form').addEventListener('submit', function(e) {
            const agreeTerms = document.getElementById('agreeTerms');
            if (!agreeTerms.checked) {
                e.preventDefault();
                alert('Bạn cần đồng ý với Điều khoản sử dụng và Chính sách bảo mật để tiếp tục.');
                agreeTerms.focus();
                return false;
            }
        });
    </script>
}
