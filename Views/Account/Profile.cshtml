@model User
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
    Layout = "_Layout";
}

<section class="profile-header">
    <div class="container">
        <div class="profile-banner">
            <div class="profile-info">
                <div class="profile-avatar">
                    <i class="bi bi-person-circle"></i>
                </div>
                <div class="profile-details">
                    <h1 class="profile-name">@Model.HoTen</h1>
                    <p class="profile-role">@Model.VaiTro</p>
                    <div class="profile-stats">
                        <div class="stat-item">
                            <span class="stat-number">@ViewBag.TotalApplications</span>
                            <span class="stat-label">Đơn ứng tuyển</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number">@ViewBag.SuccessfulApplications</span>
                            <span class="stat-label">Thành công</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number">@ViewBag.PendingApplications</span>
                            <span class="stat-label">Đang chờ</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="profile-actions">
                <a asp-action="EditProfile" class="btn btn-primary">
                    <i class="bi bi-pencil me-2"></i>Chỉnh sửa hồ sơ
                </a>
                <a asp-action="ChangePassword" class="btn btn-outline-primary">
                    <i class="bi bi-shield-lock me-2"></i>Đổi mật khẩu
                </a>
                <a href="#" class="btn btn-outline-primary">
                    <i class="bi bi-download me-2"></i>Tải CV
                </a>
            </div>
        </div>
    </div>
</section>

<section class="profile-content">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="profile-sidebar">
                    <div class="sidebar-section">
                        <h5>Thông tin cá nhân</h5>
                        <ul class="profile-menu">
                            <li><a href="#personal-info" class="active">Thông tin cơ bản</a></li>
                            <li><a href="#contact-info">Liên hệ (@(ViewBag.ContactInfo != null ? "✓" : ""))</a></li>
                            <li><a href="#education">Học vấn (@(((List<Education>)ViewBag.Educations).Count))</a></li>
                            <li><a href="#experience">Kinh nghiệm (@(((List<Experience>)ViewBag.Experiences).Count))</a></li>
                            <li><a href="#skills">Kỹ năng (@(((List<Skill>)ViewBag.Skills).Count))</a></li>
                        </ul>
                    </div>
                    
                    <div class="sidebar-section">
                        <h5>Bảo mật</h5>
                        <ul class="profile-menu">
                            <li><a asp-action="ChangePassword"><i class="bi bi-shield-lock me-2"></i>Đổi mật khẩu</a></li>
                        </ul>
                    </div>
                    
                    <div class="sidebar-section">
                        <h5>Hoạt động</h5>
                        <ul class="profile-menu">
                            <li><a href="#applications">Đơn ứng tuyển</a></li>
                            <li><a href="#saved-jobs">Việc làm đã lưu</a></li>
                            <li><a href="#notifications">Thông báo</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-9">
                <div class="profile-main">
                    <div class="profile-section" id="personal-info">
                        <div class="section-header">
                            <h3>Thông tin cá nhân</h3>
                            <a asp-action="EditProfile" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-pencil me-1"></i>Chỉnh sửa
                            </a>
                        </div>
                        <div class="section-content">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="info-item">
                                        <label>Họ và tên</label>
                                        <p>@Model.HoTen</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="info-item">
                                        <label>Email</label>
                                        <p>@Model.Email</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="info-item">
                                        <label>Tên đăng nhập</label>
                                        <p>@Model.TenDangNhap</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="info-item">
                                        <label>Ngày tạo tài khoản</label>
                                        <p>@Model.NgayTao.ToString("dd/MM/yyyy")</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="info-item">
                                        <label>Trạng thái</label>
                                        <p>@(Model.HoatDong ? "Hoạt động" : "Không hoạt động")</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="info-item">
                                        <label>Vai trò</label>
                                        <p>@Model.VaiTro</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="profile-section" id="applications">
                        <div class="section-header">
                            <h3>Lịch sử ứng tuyển</h3>
                            <a asp-controller="Jobs" asp-action="Index" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-plus me-1"></i>Tìm việc mới
                            </a>
                        </div>
                        <div class="section-content">
                            <div class="applications-list">
                                @if (ViewBag.RecentApplications != null && ((IEnumerable<Application>)ViewBag.RecentApplications).Any())
                                {
                                    @foreach (var app in (IEnumerable<Application>)ViewBag.RecentApplications)
                                    {
                                        <div class="application-item">
                                            <div class="application-info">
                                                <h5>@app.CongViec?.TieuDe</h5>
                                                <p class="company-name">@app.CongViec?.CongTy</p>
                                                <p class="application-date">Ứng tuyển: @app.NgayUngTuyen.ToString("dd/MM/yyyy")</p>
                                            </div>
                                            <div class="application-status">
                                                @if (app.TrangThai == "Chờ xem xét")
                                                {
                                                    <span class="status-badge status-pending">@app.TrangThai</span>
                                                }
                                                else if (app.TrangThai == "Đã phỏng vấn")
                                                {
                                                    <span class="status-badge status-interviewed">@app.TrangThai</span>
                                                }
                                                else if (app.TrangThai == "Đã từ chối")
                                                {
                                                    <span class="status-badge status-rejected">@app.TrangThai</span>
                                                }
                                                else
                                                {
                                                    <span class="status-badge status-approved">@app.TrangThai</span>
                                                }
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="empty-state">
                                        <i class="bi bi-file-earmark-text"></i>
                                        <h5>Chưa có đơn ứng tuyển nào</h5>
                                        <p>Bắt đầu tìm kiếm việc làm phù hợp với bạn</p>
                                        <a asp-controller="Jobs" asp-action="Index" class="btn btn-primary btn-compact">
                                            <i class="bi bi-search me-1"></i>Tìm việc ngay
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="profile-section" id="contact-info">
                        <div class="section-header">
                            <h3>Thông tin liên hệ</h3>
                            <button class="btn btn-outline-primary btn-sm" onclick="alert('Tính năng đang phát triển!')">
                                <i class="bi bi-pencil me-1"></i>Chỉnh sửa
                            </button>
                        </div>
                        <div class="section-content">
                            @if (ViewBag.ContactInfo != null)
                            {
                                var contact = (ContactInfo)ViewBag.ContactInfo;
                                <div class="row">
                                    @if (!string.IsNullOrEmpty(contact.SoDienThoai))
                                    {
                                        <div class="col-md-6">
                                            <div class="info-item">
                                                <label><i class="bi bi-telephone me-2"></i>Số điện thoại</label>
                                                <p>@contact.SoDienThoai</p>
                                            </div>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(contact.DiaChi))
                                    {
                                        <div class="col-md-6">
                                            <div class="info-item">
                                                <label><i class="bi bi-geo-alt me-2"></i>Địa chỉ</label>
                                                <p>@contact.DiaChi</p>
                                            </div>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(contact.ThanhPho))
                                    {
                                        <div class="col-md-6">
                                            <div class="info-item">
                                                <label><i class="bi bi-building me-2"></i>Thành phố</label>
                                                <p>@contact.ThanhPho</p>
                                            </div>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(contact.QuocGia))
                                    {
                                        <div class="col-md-6">
                                            <div class="info-item">
                                                <label><i class="bi bi-flag me-2"></i>Quốc gia</label>
                                                <p>@contact.QuocGia</p>
                                            </div>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(contact.LinkedIn))
                                    {
                                        <div class="col-md-6">
                                            <div class="info-item">
                                                <label><i class="bi bi-linkedin me-2"></i>LinkedIn</label>
                                                <p><a href="@contact.LinkedIn" target="_blank">@contact.LinkedIn</a></p>
                                            </div>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(contact.GitHub))
                                    {
                                        <div class="col-md-6">
                                            <div class="info-item">
                                                <label><i class="bi bi-github me-2"></i>GitHub</label>
                                                <p><a href="@contact.GitHub" target="_blank">@contact.GitHub</a></p>
                                            </div>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(contact.Website))
                                    {
                                        <div class="col-md-6">
                                            <div class="info-item">
                                                <label><i class="bi bi-globe me-2"></i>Website</label>
                                                <p><a href="@contact.Website" target="_blank">@contact.Website</a></p>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="empty-state">
                                    <i class="bi bi-person-vcard"></i>
                                    <h5>Chưa có thông tin liên hệ</h5>
                                    <p>Thêm thông tin liên hệ để nhà tuyển dụng dễ dàng liên lạc với bạn</p>
                                    <button class="btn btn-primary btn-compact" onclick="alert('Tính năng đang phát triển!')">
                                        <i class="bi bi-plus me-1"></i>Thêm thông tin liên hệ
                                    </button>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="profile-section" id="education">
                        <div class="section-header">
                            <h3>Học vấn</h3>
                            <button class="btn btn-outline-primary btn-sm" onclick="alert('Tính năng đang phát triển!')">
                                <i class="bi bi-plus me-1"></i>Thêm học vấn
                            </button>
                        </div>
                        <div class="section-content">
                            @if (ViewBag.Educations != null && ((List<Education>)ViewBag.Educations).Any())
                            {
                                @foreach (var edu in (List<Education>)ViewBag.Educations)
                                {
                                    <div class="timeline-item">
                                        <div class="timeline-icon">
                                            <i class="bi bi-mortarboard-fill"></i>
                                        </div>
                                        <div class="timeline-content">
                                            <h5>@edu.BangCap</h5>
                                            <h6>@edu.TenTruong</h6>
                                            @if (!string.IsNullOrEmpty(edu.ChuyenNganh))
                                            {
                                                <p class="timeline-subtitle">@edu.ChuyenNganh</p>
                                            }
                                            <p class="timeline-date">
                                                <i class="bi bi-calendar me-1"></i>
                                                @edu.NgayBatDau.ToString("MM/yyyy") - 
                                                @(edu.DangHoc ? "Hiện tại" : edu.NgayKetThuc?.ToString("MM/yyyy"))
                                            </p>
                                            @if (edu.DiemGPA.HasValue)
                                            {
                                                <p class="timeline-meta"><strong>GPA:</strong> @edu.DiemGPA.Value.ToString("0.00")</p>
                                            }
                                            @if (!string.IsNullOrEmpty(edu.MoTa))
                                            {
                                                <p class="timeline-description">@edu.MoTa</p>
                                            }
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="empty-state">
                                    <i class="bi bi-book"></i>
                                    <h5>Chưa có thông tin học vấn</h5>
                                    <p>Thêm thông tin học vấn để hoàn thiện hồ sơ của bạn</p>
                                    <button class="btn btn-primary btn-compact" onclick="alert('Tính năng đang phát triển!')">
                                        <i class="bi bi-plus me-1"></i>Thêm học vấn
                                    </button>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="profile-section" id="experience">
                        <div class="section-header">
                            <h3>Kinh nghiệm làm việc</h3>
                            <button class="btn btn-outline-primary btn-sm" onclick="alert('Tính năng đang phát triển!')">
                                <i class="bi bi-plus me-1"></i>Thêm kinh nghiệm
                            </button>
                        </div>
                        <div class="section-content">
                            @if (ViewBag.Experiences != null && ((List<Experience>)ViewBag.Experiences).Any())
                            {
                                @foreach (var exp in (List<Experience>)ViewBag.Experiences)
                                {
                                    <div class="timeline-item">
                                        <div class="timeline-icon">
                                            <i class="bi bi-briefcase-fill"></i>
                                        </div>
                                        <div class="timeline-content">
                                            <h5>@exp.ViTri</h5>
                                            <h6>@exp.TenCongTy</h6>
                                            @if (!string.IsNullOrEmpty(exp.DiaDiem))
                                            {
                                                <p class="timeline-subtitle"><i class="bi bi-geo-alt me-1"></i>@exp.DiaDiem</p>
                                            }
                                            <p class="timeline-date">
                                                <i class="bi bi-calendar me-1"></i>
                                                @exp.NgayBatDau.ToString("MM/yyyy") - 
                                                @(exp.DangLamViec ? "Hiện tại" : exp.NgayKetThuc?.ToString("MM/yyyy"))
                                            </p>
                                            @if (!string.IsNullOrEmpty(exp.MoTaCongViec))
                                            {
                                                <p class="timeline-description">@exp.MoTaCongViec</p>
                                            }
                                            @if (!string.IsNullOrEmpty(exp.ThanhTich))
                                            {
                                                <p class="timeline-achievement"><strong>Thành tích:</strong> @exp.ThanhTich</p>
                                            }
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="empty-state">
                                    <i class="bi bi-briefcase"></i>
                                    <h5>Chưa có kinh nghiệm làm việc</h5>
                                    <p>Thêm kinh nghiệm làm việc để tăng cơ hội tuyển dụng</p>
                                    <button class="btn btn-primary btn-compact" onclick="alert('Tính năng đang phát triển!')">
                                        <i class="bi bi-plus me-1"></i>Thêm kinh nghiệm
                                    </button>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="profile-section" id="skills">
                        <div class="section-header">
                            <h3>Kỹ năng</h3>
                            <button class="btn btn-outline-primary btn-sm" onclick="alert('Tính năng đang phát triển!')">
                                <i class="bi bi-plus me-1"></i>Thêm kỹ năng
                            </button>
                        </div>
                        <div class="section-content">
                            @if (ViewBag.Skills != null && ((List<Skill>)ViewBag.Skills).Any())
                            {
                                var skillsByCategory = ((List<Skill>)ViewBag.Skills).GroupBy(s => s.DanhMuc ?? "Khác");
                                @foreach (var category in skillsByCategory)
                                {
                                    <div class="skill-category">
                                        <h6 class="skill-category-title">@category.Key</h6>
                                        <div class="skills-grid">
                                            @foreach (var skill in category)
                                            {
                                                <div class="skill-item">
                                                    <div class="skill-header">
                                                        <span class="skill-name">@skill.TenKyNang</span>
                                                        <span class="skill-level">@skill.CapDo</span>
                                                    </div>
                                                    <div class="skill-bar">
                                                        <div class="skill-bar-fill" style="width: @skill.PhanTramThanhThao%">
                                                            <span class="skill-percent">@skill.PhanTramThanhThao%</span>
                                                        </div>
                                                    </div>
                                                    @if (skill.SoNamKinhNghiem.HasValue)
                                                    {
                                                        <small class="skill-experience">@skill.SoNamKinhNghiem năm kinh nghiệm</small>
                                                    }
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="empty-state">
                                    <i class="bi bi-star"></i>
                                    <h5>Chưa có kỹ năng</h5>
                                    <p>Thêm kỹ năng để thể hiện năng lực của bạn</p>
                                    <button class="btn btn-primary btn-compact" onclick="alert('Tính năng đang phát triển!')">
                                        <i class="bi bi-plus me-1"></i>Thêm kỹ năng
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

