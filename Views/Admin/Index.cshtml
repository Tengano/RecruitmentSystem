@model IEnumerable<Application>
@{
    ViewData["Title"] = "Trang quản trị";
    Layout = "_AdminLayout";
}

<!-- Dashboard Header -->
<div class="dashboard-header mb-4">
    <h1 class="dashboard-title">
        <i class="bi bi-speedometer2 me-3"></i>Dashboard
    </h1>
    <p class="dashboard-subtitle">Tổng quan hệ thống tuyển dụng</p>
</div>

<!-- Stats Cards -->
<div class="row mb-5">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card stat-card-primary">
            <div class="stat-icon">
                <i class="bi bi-briefcase-fill"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@ViewBag.TotalJobs</div>
                <div class="stat-label">TỔNG SỐ VIỆC LÀM</div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card stat-card-success">
            <div class="stat-icon">
                <i class="bi bi-check-circle-fill"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@ViewBag.ActiveJobs</div>
                <div class="stat-label">VIỆC LÀM ĐANG TUYỂN</div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card stat-card-info">
            <div class="stat-icon">
                <i class="bi bi-file-earmark-text-fill"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@ViewBag.TotalApplications</div>
                <div class="stat-label">TỔNG ĐƠN ỨNG TUYỂN</div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card stat-card-warning">
            <div class="stat-icon">
                <i class="bi bi-hourglass-split"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@ViewBag.PendingApplications</div>
                <div class="stat-label">ĐƠN CHỜ DUYỆT</div>
            </div>
        </div>
    </div>
</div>


<!-- Quick Actions -->
<div class="quick-actions mt-4">
    <h3 class="section-title mb-3">
        <i class="bi bi-lightning-charge me-2"></i>Thao tác nhanh
    </h3>
    <div class="row g-3">
        <div class="col-xl-3 col-md-6">
            <a asp-controller="Admin" asp-action="CreateJob" class="quick-action-card">
                <div class="quick-action-icon quick-action-icon-primary">
                    <i class="bi bi-plus-circle"></i>
                </div>
                <div class="quick-action-content">
                    <h5>Tạo tin tuyển dụng</h5>
                    <p>Đăng bài tuyển dụng mới</p>
                </div>
            </a>
        </div>
        <div class="col-xl-3 col-md-6">
            <a asp-controller="Admin" asp-action="Jobs" class="quick-action-card">
                <div class="quick-action-icon quick-action-icon-success">
                    <i class="bi bi-briefcase"></i>
                </div>
                <div class="quick-action-content">
                    <h5>Quản lý việc làm</h5>
                    <p>Xem và chỉnh sửa việc làm</p>
                </div>
            </a>
        </div>
        <div class="col-xl-3 col-md-6">
            <a asp-controller="Admin" asp-action="Applications" class="quick-action-card">
                <div class="quick-action-icon quick-action-icon-info">
                    <i class="bi bi-file-earmark-text"></i>
                </div>
                <div class="quick-action-content">
                    <h5>Đơn ứng tuyển</h5>
                    <p>Xem và xử lý đơn ứng tuyển</p>
                </div>
            </a>
        </div>
        <div class="col-xl-3 col-md-6">
            <a asp-controller="Admin" asp-action="Candidates" class="quick-action-card">
                <div class="quick-action-icon quick-action-icon-warning">
                    <i class="bi bi-people"></i>
                </div>
                <div class="quick-action-content">
                    <h5>Ứng viên</h5>
                    <p>Quản lý thông tin ứng viên</p>
                </div>
            </a>
        </div>
    </div>
</div>

