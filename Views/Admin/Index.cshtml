@model IEnumerable<Application>
@{
    ViewData["Title"] = "Trang quản trị";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="bi bi-speedometer2 me-2"></i>Dashboard</h1>
</div>

<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Tổng số việc làm</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalJobs</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-briefcase-fill fa-2x text-gray-300" style="font-size: 2rem; color: #4e73df;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Việc làm đang tuyển</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.ActiveJobs</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-check-circle-fill fa-2x" style="font-size: 2rem; color: #1cc88a;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Tổng đơn ứng tuyển</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalApplications</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-file-earmark-text-fill fa-2x" style="font-size: 2rem; color: #36b9cc;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Đơn chờ duyệt</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.PendingApplications</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-hourglass-split fa-2x" style="font-size: 2rem; color: #f6c23e;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Đơn ứng tuyển gần đây</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Ứng viên</th>
                        <th>Vị trí</th>
                        <th>Email</th>
                        <th>Ngày nộp</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var app in Model)
                    {
                        <tr>
                            <td>@app.FullName</td>
                            <td>@app.Job?.Title</td>
                            <td>@app.Email</td>
                            <td>@app.AppliedDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (app.Status == "Pending")
                                {
                                    <span class="badge bg-warning text-dark">Chờ duyệt</span>
                                }
                                else if (app.Status == "Reviewed")
                                {
                                    <span class="badge bg-info">Đã xem</span>
                                }
                                else if (app.Status == "Interview")
                                {
                                    <span class="badge bg-primary">Phỏng vấn</span>
                                }
                                else if (app.Status == "Accepted")
                                {
                                    <span class="badge bg-success">Chấp nhận</span>
                                }
                                else if (app.Status == "Rejected")
                                {
                                    <span class="badge bg-danger">Từ chối</span>
                                }
                            </td>
                            <td>
                                <a asp-action="ApplicationDetails" asp-route-id="@app.ApplicationId" class="btn btn-sm btn-primary">
                                    <i class="bi bi-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .border-left-primary {
        border-left: 4px solid #4e73df !important;
    }
    .border-left-success {
        border-left: 4px solid #1cc88a !important;
    }
    .border-left-info {
        border-left: 4px solid #36b9cc !important;
    }
    .border-left-warning {
        border-left: 4px solid #f6c23e !important;
    }
</style>

