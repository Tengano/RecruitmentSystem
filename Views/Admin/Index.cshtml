@model IEnumerable<Application>
@{
    ViewData["Title"] = "Trang quản trị";
    Layout = "_AdminLayout";
}

<!-- Dashboard Header -->
<div class="dashboard-header mb-4">
    <h1 class="dashboard-title">
        <i class="bi bi-speedometer2 me-3"></i>Dashboard
    </h1>
    <p class="dashboard-subtitle">Tổng quan hệ thống tuyển dụng</p>
</div>

<!-- Stats Cards -->
<div class="row mb-5">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card stat-card-primary">
            <div class="stat-icon">
                <i class="bi bi-briefcase-fill"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@ViewBag.TotalJobs</div>
                <div class="stat-label">TỔNG SỐ VIỆC LÀM</div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card stat-card-success">
            <div class="stat-icon">
                <i class="bi bi-check-circle-fill"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@ViewBag.ActiveJobs</div>
                <div class="stat-label">VIỆC LÀM ĐANG TUYỂN</div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card stat-card-info">
            <div class="stat-icon">
                <i class="bi bi-file-earmark-text-fill"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@ViewBag.TotalApplications</div>
                <div class="stat-label">TỔNG ĐƠN ỨNG TUYỂN</div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card stat-card-warning">
            <div class="stat-icon">
                <i class="bi bi-hourglass-split"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@ViewBag.PendingApplications</div>
                <div class="stat-label">ĐƠN CHỜ DUYỆT</div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Applications Section -->
<div class="recent-applications">
    <div class="section-header">
        <h2 class="section-title">
            <i class="bi bi-clock-history me-2"></i>Đơn ứng tuyển gần đây
        </h2>
        <a asp-controller="Admin" asp-action="Applications" class="btn btn-outline-primary">
            <i class="bi bi-arrow-right me-1"></i>Xem tất cả
        </a>
    </div>

    <div class="applications-table">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th><i class="bi bi-person me-1"></i>Ứng viên</th>
                        <th><i class="bi bi-briefcase me-1"></i>Vị trí</th>
                        <th><i class="bi bi-envelope me-1"></i>Email</th>
                        <th><i class="bi bi-calendar me-1"></i>Ngày nộp</th>
                        <th><i class="bi bi-flag me-1"></i>Trạng thái</th>
                        <th><i class="bi bi-gear me-1"></i>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var app in Model)
                    {
                        <tr class="application-row">
                            <td>
                                <div class="applicant-info">
                                    <div class="applicant-avatar">
                                        <i class="bi bi-person-circle"></i>
                                    </div>
                                    <div class="applicant-details">
                                        <div class="applicant-name">@app.HoTen</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="job-position">
                                    <i class="bi bi-briefcase me-1"></i>@app.CongViec?.TieuDe
                                </div>
                            </td>
                            <td>
                                <div class="email-info">
                                    <i class="bi bi-envelope me-1"></i>@app.Email
                                </div>
                            </td>
                            <td>
                                <div class="date-info">
                                    <i class="bi bi-calendar me-1"></i>@app.NgayUngTuyen.ToString("dd/MM/yyyy")
                                </div>
                            </td>
                            <td>
                                @if (app.TrangThai == "Chờ xem xét")
                                {
                                    <span class="status-badge status-pending">
                                        <i class="bi bi-clock me-1"></i>Chờ xem xét
                                    </span>
                                }
                                else if (app.TrangThai == "Đã phỏng vấn")
                                {
                                    <span class="status-badge status-interviewed">
                                        <i class="bi bi-camera-video me-1"></i>Đã phỏng vấn
                                    </span>
                                }
                                else if (app.TrangThai == "Đã từ chối")
                                {
                                    <span class="status-badge status-rejected">
                                        <i class="bi bi-x-circle me-1"></i>Đã từ chối
                                    </span>
                                }
                                else
                                {
                                    <span class="status-badge status-approved">
                                        <i class="bi bi-check-circle me-1"></i>@app.TrangThai
                                    </span>
                                }
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-action="ApplicationDetails" asp-route-id="@app.MaDonUngTuyen" 
                                       class="btn btn-sm btn-primary action-btn" title="Xem chi tiết">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="EditApplication" asp-route-id="@app.MaDonUngTuyen" 
                                       class="btn btn-sm btn-outline-secondary action-btn" title="Chỉnh sửa">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="quick-actions mt-5">
    <h3 class="section-title mb-4">
        <i class="bi bi-lightning-charge me-2"></i>Thao tác nhanh
    </h3>
    <div class="row">
        <div class="col-md-3 mb-3">
            <a asp-controller="Admin" asp-action="CreateJob" class="quick-action-card">
                <div class="quick-action-icon">
                    <i class="bi bi-plus-circle"></i>
                </div>
                <div class="quick-action-content">
                    <h5>Tạo tin tuyển dụng</h5>
                    <p>Đăng bài tuyển dụng mới</p>
                </div>
            </a>
        </div>
        <div class="col-md-3 mb-3">
            <a asp-controller="Admin" asp-action="Jobs" class="quick-action-card">
                <div class="quick-action-icon">
                    <i class="bi bi-briefcase"></i>
                </div>
                <div class="quick-action-content">
                    <h5>Quản lý việc làm</h5>
                    <p>Xem và chỉnh sửa việc làm</p>
                </div>
            </a>
        </div>
        <div class="col-md-3 mb-3">
            <a asp-controller="Admin" asp-action="Applications" class="quick-action-card">
                <div class="quick-action-icon">
                    <i class="bi bi-file-text"></i>
                </div>
                <div class="quick-action-content">
                    <h5>Đơn ứng tuyển</h5>
                    <p>Xem và xử lý đơn ứng tuyển</p>
                </div>
            </a>
        </div>
        <div class="col-md-3 mb-3">
            <a asp-controller="Admin" asp-action="Candidates" class="quick-action-card">
                <div class="quick-action-icon">
                    <i class="bi bi-people"></i>
                </div>
                <div class="quick-action-content">
                    <h5>Ứng viên</h5>
                    <p>Quản lý thông tin ứng viên</p>
                </div>
            </a>
        </div>
    </div>
</div>

