@model Job
@{
    ViewData["Title"] = "Chỉnh sửa tin tuyển dụng";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="bi bi-pencil me-2"></i>Chỉnh sửa tin tuyển dụng</h1>
</div>

<div class="card shadow">
    <div class="card-body">
        <form asp-action="EditJob" method="post">
            <input type="hidden" asp-for="MaCongViec" />
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="TieuDe" class="form-label">Tiêu đề công việc *</label>
                    <input asp-for="TieuDe" class="form-control" />
                    <span asp-validation-for="TieuDe" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="CongTy" class="form-label">Công ty *</label>
                    <input asp-for="CongTy" class="form-control" />
                    <span asp-validation-for="CongTy" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="MoTa" class="form-label">Mô tả công việc *</label>
                <textarea asp-for="MoTa" class="form-control" rows="5"></textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="YeuCau" class="form-label">Yêu cầu công việc *</label>
                <textarea asp-for="YeuCau" class="form-control" rows="5"></textarea>
                <span asp-validation-for="YeuCau" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PhucLoi" class="form-label">Quyền lợi</label>
                <textarea asp-for="PhucLoi" class="form-control" rows="4"></textarea>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="DiaDiem" class="form-label">Địa điểm *</label>
                    <input asp-for="DiaDiem" class="form-control" />
                    <span asp-validation-for="DiaDiem" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="DanhMuc" class="form-label">Ngành nghề *</label>
                    <select asp-for="DanhMuc" class="form-select">
                        <option value="">Chọn ngành nghề</option>
                        <option value="Công nghệ thông tin">Công nghệ thông tin</option>
                        <option value="Kinh doanh">Kinh doanh</option>
                        <option value="Marketing">Marketing</option>
                        <option value="Thiết kế">Thiết kế</option>
                        <option value="Nhân sự">Nhân sự</option>
                        <option value="Kế toán">Kế toán</option>
                    </select>
                    <span asp-validation-for="DanhMuc" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="LoaiCongViec" class="form-label">Loại công việc *</label>
                    <select asp-for="LoaiCongViec" class="form-select">
                        <option value="">Chọn loại</option>
                        <option value="Toàn thời gian">Toàn thời gian</option>
                        <option value="Bán thời gian">Bán thời gian</option>
                        <option value="Hợp đồng">Hợp đồng</option>
                        <option value="Thực tập">Thực tập</option>
                    </select>
                    <span asp-validation-for="LoaiCongViec" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="LuongToiThieu" class="form-label">Lương tối thiểu (VNĐ)</label>
                    <input asp-for="LuongToiThieu" type="number" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="LuongToiDa" class="form-label">Lương tối đa (VNĐ)</label>
                    <input asp-for="LuongToiDa" type="number" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="NamKinhNghiem" class="form-label">Số năm kinh nghiệm</label>
                    <input asp-for="NamKinhNghiem" type="number" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="NgayKetThuc" class="form-label">Ngày hết hạn</label>
                    <input asp-for="NgayKetThuc" type="date" class="form-control" 
                           value="@Model.NgayKetThuc?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="HoatDong" class="form-label">Trạng thái</label>
                    <div class="form-check form-switch mt-2">
                        <input asp-for="HoatDong" class="form-check-input" type="checkbox" />
                        <label asp-for="HoatDong" class="form-check-label">Đang tuyển</label>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-save me-2"></i>Cập nhật
                </button>
                <a asp-action="Jobs" class="btn btn-secondary btn-lg">
                    <i class="bi bi-x-circle me-2"></i>Hủy
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

