@model Job
@{
    ViewData["Title"] = "Chỉnh sửa tin tuyển dụng";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="bi bi-pencil me-2"></i>Chỉnh sửa tin tuyển dụng</h1>
</div>

<div class="card shadow">
    <div class="card-body">
        <form asp-action="EditJob" method="post">
            <input type="hidden" asp-for="JobId" />
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Title" class="form-label">Tiêu đề công việc *</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Company" class="form-label">Công ty *</label>
                    <input asp-for="Company" class="form-control" />
                    <span asp-validation-for="Company" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Mô tả công việc *</label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Requirements" class="form-label">Yêu cầu công việc *</label>
                <textarea asp-for="Requirements" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Requirements" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Benefits" class="form-label">Quyền lợi</label>
                <textarea asp-for="Benefits" class="form-control" rows="4"></textarea>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Location" class="form-label">Địa điểm *</label>
                    <input asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Category" class="form-label">Ngành nghề *</label>
                    <select asp-for="Category" class="form-select">
                        <option value="">Chọn ngành nghề</option>
                        <option value="Công nghệ thông tin">Công nghệ thông tin</option>
                        <option value="Kinh doanh">Kinh doanh</option>
                        <option value="Marketing">Marketing</option>
                        <option value="Thiết kế">Thiết kế</option>
                        <option value="Nhân sự">Nhân sự</option>
                        <option value="Kế toán">Kế toán</option>
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="JobType" class="form-label">Loại công việc *</label>
                    <select asp-for="JobType" class="form-select">
                        <option value="">Chọn loại</option>
                        <option value="Full-time">Full-time</option>
                        <option value="Part-time">Part-time</option>
                        <option value="Contract">Contract</option>
                        <option value="Internship">Internship</option>
                    </select>
                    <span asp-validation-for="JobType" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="SalaryMin" class="form-label">Lương tối thiểu (VNĐ)</label>
                    <input asp-for="SalaryMin" type="number" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="SalaryMax" class="form-label">Lương tối đa (VNĐ)</label>
                    <input asp-for="SalaryMax" type="number" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="ExperienceYears" class="form-label">Số năm kinh nghiệm</label>
                    <input asp-for="ExperienceYears" type="number" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="ClosingDate" class="form-label">Ngày hết hạn</label>
                    <input asp-for="ClosingDate" type="date" class="form-control" 
                           value="@Model.ClosingDate?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="IsActive" class="form-label">Trạng thái</label>
                    <div class="form-check form-switch mt-2">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                        <label asp-for="IsActive" class="form-check-label">Đang tuyển</label>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-save me-2"></i>Cập nhật
                </button>
                <a asp-action="Jobs" class="btn btn-secondary btn-lg">
                    <i class="bi bi-x-circle me-2"></i>Hủy
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

