@model Application
@{
    ViewData["Title"] = "Chi tiết đơn ứng tuyển";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="bi bi-file-earmark-text me-2"></i>Chi tiết đơn ứng tuyển</h1>
    <div>
        <a asp-action="Applications" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i>Quay lại
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header">
                <h5 class="mb-0">Thông tin ứng viên</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Họ và tên:</dt>
                    <dd class="col-sm-8">@Model.HoTen</dd>

                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8"><a href="mailto:@Model.Email">@Model.Email</a></dd>

                    <dt class="col-sm-4">Số điện thoại:</dt>
                    <dd class="col-sm-8"><a href="tel:@Model.SoDienThoai">@Model.SoDienThoai</a></dd>

                    <dt class="col-sm-4">Vị trí ứng tuyển:</dt>
                    <dd class="col-sm-8">
                        <a asp-controller="Jobs" asp-action="Details" asp-route-id="@Model.CongViec?.MaCongViec">
                            @Model.CongViec?.TieuDe
                        </a>
                    </dd>

                    <dt class="col-sm-4">Ngày nộp:</dt>
                    <dd class="col-sm-8">@Model.NgayUngTuyen.ToString("dd/MM/yyyy HH:mm")</dd>

                    <dt class="col-sm-4">Trạng thái:</dt>
                    <dd class="col-sm-8">
                        <select class="form-select w-auto status-select" data-id="@Model.MaDonUngTuyen">
                            <option value="Chờ xem xét" selected="@(Model.TrangThai == "Chờ xem xét")">Chờ xem xét</option>
                            <option value="Đã phỏng vấn" selected="@(Model.TrangThai == "Đã phỏng vấn")">Đã phỏng vấn</option>
                            <option value="Đã từ chối" selected="@(Model.TrangThai == "Đã từ chối")">Đã từ chối</option>
                        </select>
                    </dd>
                </dl>

                @if (!string.IsNullOrEmpty(Model.KinhNghiem))
                {
                    <hr />
                    <h5 class="mb-3">Kinh nghiệm:</h5>
                    <p class="bg-light p-3 rounded" style="white-space: pre-line;">@Model.KinhNghiem</p>
                }

                @if (!string.IsNullOrEmpty(Model.KyNang))
                {
                    <hr />
                    <h5 class="mb-3">Kỹ năng:</h5>
                    <p class="bg-light p-3 rounded" style="white-space: pre-line;">@Model.KyNang</p>
                }
            </div>
        </div>

        <div class="card shadow">
            <div class="card-header">
                <h5 class="mb-0">Thông tin bổ sung</h5>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.DiaChi))
                {
                    <p><strong>Địa chỉ:</strong> @Model.DiaChi</p>
                }
                @if (Model.NgaySinh.HasValue)
                {
                    <p><strong>Ngày sinh:</strong> @Model.NgaySinh.Value.ToString("dd/MM/yyyy")</p>
                }
                @if (!string.IsNullOrEmpty(Model.GioiTinh))
                {
                    <p><strong>Giới tính:</strong> @Model.GioiTinh</p>
                }
                @if (!string.IsNullOrEmpty(Model.TrinhDoHocVan))
                {
                    <p><strong>Trình độ học vấn:</strong> @Model.TrinhDoHocVan</p>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow">
            <div class="card-header">
                <h5 class="mb-0">Thông tin công việc</h5>
            </div>
            <div class="card-body">
                <h6 class="text-primary">@Model.CongViec?.TieuDe</h6>
                <p class="text-muted mb-2">@Model.CongViec?.CongTy</p>
                <p class="mb-2"><i class="bi bi-geo-alt me-2"></i>@Model.CongViec?.DiaDiem</p>
                <p class="mb-2"><i class="bi bi-tag me-2"></i>@Model.CongViec?.LoaiCongViec</p>
                @if (Model.CongViec?.LuongToiThieu.HasValue == true && Model.CongViec?.LuongToiDa.HasValue == true)
                {
                    <p class="text-success fw-semibold">
                        <i class="bi bi-cash me-2"></i>
                        @Model.CongViec?.LuongToiThieu.Value.ToString("N0") - @Model.CongViec?.LuongToiDa.Value.ToString("N0") VNĐ
                    </p>
                }
                <hr />
                <a asp-controller="Jobs" asp-action="Details" asp-route-id="@Model.CongViec?.MaCongViec" class="btn btn-sm btn-outline-primary w-100" target="_blank">
                    <i class="bi bi-eye me-2"></i>Xem chi tiết công việc
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelector('.status-select').addEventListener('change', async function() {
            const id = this.dataset.id;
            const status = this.value;
            
            try {
                const response = await fetch('@Url.Action("UpdateApplicationStatus", "Admin")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ id, status })
                });
                
                const result = await response.json();
                if (result.success) {
                    alert('Cập nhật trạng thái thành công!');
                } else {
                    alert('Có lỗi xảy ra!');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Có lỗi xảy ra!');
            }
        });
    </script>
}

