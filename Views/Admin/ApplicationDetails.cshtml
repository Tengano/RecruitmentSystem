@model Application
@{
    ViewData["Title"] = "Chi tiết đơn ứng tuyển";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="bi bi-file-earmark-text me-2"></i>Chi tiết đơn ứng tuyển</h1>
    <div>
        <a asp-action="Applications" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i>Quay lại
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header">
                <h5 class="mb-0">Thông tin ứng viên</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Họ và tên:</dt>
                    <dd class="col-sm-8">@Model.FullName</dd>

                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8"><a href="mailto:@Model.Email">@Model.Email</a></dd>

                    <dt class="col-sm-4">Số điện thoại:</dt>
                    <dd class="col-sm-8"><a href="tel:@Model.Phone">@Model.Phone</a></dd>

                    <dt class="col-sm-4">Vị trí ứng tuyển:</dt>
                    <dd class="col-sm-8">
                        <a asp-controller="Jobs" asp-action="Details" asp-route-id="@Model.Job?.JobId">
                            @Model.Job?.Title
                        </a>
                    </dd>

                    <dt class="col-sm-4">Ngày nộp:</dt>
                    <dd class="col-sm-8">@Model.AppliedDate.ToString("dd/MM/yyyy HH:mm")</dd>

                    <dt class="col-sm-4">Trạng thái:</dt>
                    <dd class="col-sm-8">
                        <select class="form-select w-auto status-select" data-id="@Model.ApplicationId">
                            <option value="Pending" selected="@(Model.Status == "Pending")">Chờ duyệt</option>
                            <option value="Reviewed" selected="@(Model.Status == "Reviewed")">Đã xem</option>
                            <option value="Interview" selected="@(Model.Status == "Interview")">Phỏng vấn</option>
                            <option value="Accepted" selected="@(Model.Status == "Accepted")">Chấp nhận</option>
                            <option value="Rejected" selected="@(Model.Status == "Rejected")">Từ chối</option>
                        </select>
                    </dd>
                </dl>

                @if (!string.IsNullOrEmpty(Model.CoverLetter))
                {
                    <hr />
                    <h5 class="mb-3">Thư xin việc:</h5>
                    <p class="bg-light p-3 rounded" style="white-space: pre-line;">@Model.CoverLetter</p>
                }

                @if (!string.IsNullOrEmpty(Model.ResumeUrl))
                {
                    <hr />
                    <h5 class="mb-3">CV/Resume:</h5>
                    <a href="@Model.ResumeUrl" class="btn btn-outline-primary" target="_blank">
                        <i class="bi bi-download me-2"></i>Tải xuống CV
                    </a>
                }
            </div>
        </div>

        <div class="card shadow">
            <div class="card-header">
                <h5 class="mb-0">Ghi chú</h5>
            </div>
            <div class="card-body">
                <form>
                    <div class="mb-3">
                        <textarea class="form-control" rows="4" placeholder="Thêm ghi chú về ứng viên...">@Model.Notes</textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-2"></i>Lưu ghi chú
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow">
            <div class="card-header">
                <h5 class="mb-0">Thông tin công việc</h5>
            </div>
            <div class="card-body">
                <h6 class="text-primary">@Model.Job?.Title</h6>
                <p class="text-muted mb-2">@Model.Job?.Company</p>
                <p class="mb-2"><i class="bi bi-geo-alt me-2"></i>@Model.Job?.Location</p>
                <p class="mb-2"><i class="bi bi-tag me-2"></i>@Model.Job?.JobType</p>
                @if (Model.Job?.SalaryMin.HasValue == true && Model.Job?.SalaryMax.HasValue == true)
                {
                    <p class="text-success fw-semibold">
                        <i class="bi bi-cash me-2"></i>
                        @Model.Job?.SalaryMin.Value.ToString("N0") - @Model.Job?.SalaryMax.Value.ToString("N0") VNĐ
                    </p>
                }
                <hr />
                <a asp-controller="Jobs" asp-action="Details" asp-route-id="@Model.Job?.JobId" class="btn btn-sm btn-outline-primary w-100" target="_blank">
                    <i class="bi bi-eye me-2"></i>Xem chi tiết công việc
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelector('.status-select').addEventListener('change', async function() {
            const id = this.dataset.id;
            const status = this.value;
            
            try {
                const response = await fetch('@Url.Action("UpdateApplicationStatus", "Admin")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ id, status })
                });
                
                const result = await response.json();
                if (result.success) {
                    alert('Cập nhật trạng thái thành công!');
                } else {
                    alert('Có lỗi xảy ra!');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Có lỗi xảy ra!');
            }
        });
    </script>
}

