@model IEnumerable<Job>
@{
    ViewData["Title"] = "Quản lý việc làm";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="bi bi-briefcase me-2"></i>Quản lý việc làm</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="CreateJob" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Tạo tin mới
        </a>
    </div>
</div>

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tiêu đề</th>
                        <th>Công ty</th>
                        <th>Địa điểm</th>
                        <th>Loại</th>
                        <th>Ngày đăng</th>
                        <th>Trạng thái</th>
                        <th>Lượt xem</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var job in Model)
                    {
                        <tr>
                            <td>@job.MaCongViec</td>
                            <td>@job.TieuDe</td>
                            <td>@job.CongTy</td>
                            <td>@job.DiaDiem</td>
                            <td><span class="badge bg-primary">@job.LoaiCongViec</span></td>
                            <td>@job.NgayDang.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (job.HoatDong)
                                {
                                    <span class="badge bg-success">Đang tuyển</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Đã đóng</span>
                                }
                            </td>
                            <td>@job.LuotXem</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="EditJob" asp-route-id="@job.MaCongViec" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="DeleteJob" asp-route-id="@job.MaCongViec" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

