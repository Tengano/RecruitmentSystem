@model IEnumerable<User>
@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="bi bi-people me-2"></i>Quản lý người dùng</h1>
</div>

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên đăng nhập</th>
                        <th>Họ và tên</th>
                        <th>Email</th>
                        <th>Vai trò</th>
                        <th>Ngày tạo</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>@user.TenDangNhap</td>
                                <td>@user.HoTen</td>
                                <td>@user.Email</td>
                                <td>
                                    @if (user.VaiTro == "Admin")
                                    {
                                        <span class="badge bg-danger">@user.VaiTro</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary">@user.VaiTro</span>
                                    }
                                </td>
                                <td>@user.NgayTao.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    @if (user.HoatDong)
                                    {
                                        <span class="badge bg-success">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Không hoạt động</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted">Chưa có người dùng nào</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

