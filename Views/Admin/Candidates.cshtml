@model IEnumerable<Candidate>
@{
    ViewData["Title"] = "Quản lý ứng viên";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="bi bi-people me-2"></i>Quản lý ứng viên</h1>
</div>

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Họ và tên</th>
                        <th>Email</th>
                        <th>Số điện thoại</th>
                        <th>Ngày đăng ký</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var candidate in Model)
                        {
                            <tr>
                                <td>@candidate.CandidateId</td>
                                <td>@candidate.FullName</td>
                                <td>@candidate.Email</td>
                                <td>@candidate.Phone</td>
                                <td>@candidate.RegisteredDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <span class="badge bg-success">Đang hoạt động</span>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">Chưa có ứng viên nào đăng ký</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

