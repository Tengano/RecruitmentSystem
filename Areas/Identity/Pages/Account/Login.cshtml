@page
@model RecruitmentSystem.Areas.Identity.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Đăng nhập
                    </h2>
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="mb-3">
                            <label asp-for="ThongTinDauVao.Email" class="form-label">Email</label>
                            <input asp-for="ThongTinDauVao.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <span asp-validation-for="ThongTinDauVao.Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ThongTinDauVao.MatKhau" class="form-label">Mật khẩu</label>
                            <input asp-for="ThongTinDauVao.MatKhau" class="form-control" autocomplete="current-password" aria-required="true" />
                            <span asp-validation-for="ThongTinDauVao.MatKhau" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-check">
                            <input class="form-check-input" asp-for="ThongTinDauVao.GhiNhoDangNhap" />
                            <label class="form-check-label" asp-for="ThongTinDauVao.GhiNhoDangNhap">
                                Ghi nhớ đăng nhập
                            </label>
                        </div>
                        <div class="d-grid">
                            <button id="login-submit" type="submit" class="btn btn-primary">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Đăng nhập
                            </button>
                        </div>
                        <div class="text-center mt-3">
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.UrlTraVe">Đăng ký tài khoản mới</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
